{
  "name": "py-hover-install",
  "publisher": "ahmedelrweny",
  "displayName": "Py Hover Install",
  "description": "",
  "icon": "images/icon.png",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pyHoverInstall.install",
        "title": "Install Python package shown in hover"
      }
    ],
    "configuration": {
      "title": "Py Hover Install",
      "properties": {
        "pyHoverInstall.installInterpreterPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Python interpreter to use for `pip install`. If empty the extension will prefer a .venv (if a .venv/venv folder exists in the directory) or fallback to the system Python."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedelrweny/py-hover-install"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
